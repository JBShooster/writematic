<div class="pagehead"><h1>Writematic</h1></div>
<%= link_to "Publish My Work", new_book_path %>

<div class="most-popular">
<p>Most Popular Books</p>
<%=form_tag books_path, method: :get do %>
<%= select_tag :category, options_from_collection_for_select(@categories, :id, :group, @category) %>
<% end %>

<%= form_tag books_path, method: :get, style: "display: inline;" do %>
  <span id="view-all">
  <%= button_tag "View All Books", class: "button" %></span>
<% end %>

<%= link_to "Logout", logout_path, method: :post %>


<div class= "container">
<% @books.each do |book| %>
  <div class="row well well-lg" style="margin-top: 5px">
    <div class="col-sm-2">
     <% if book.cover.include? "http://" %>
      <img src="<%= book.cover + "-/crop/100x100/center/-/inline/yes/"%>"/>
      <% else %>
      <%=  %>
      <% end %>
    </div>
  <div class="col-sm-10">
    <%= link_to "#{book.title}", "/books/#{book.id}"%>
    <br>
    <b>Written by: <%= book.author %></b>
    <br><i>
    <%= book.description %>
    </i>
  </div>
  <% if book.user_id == @user %>
  Want to delete? It's your book
  <%= button_to "X", book_path(book), :method => :delete %>
  <% else %>
  <%=  %>
  <% end %>
</div>
    
  <% end %>

</div>